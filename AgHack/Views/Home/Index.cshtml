<div class="bg-light h-100">
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- 左側地圖區域 -->
            <div class="col-md-8 p-3">
                <div class="card h-100 shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-map me-2"></i>互動式地圖</h4>
                    </div>
                    <div id="Map" class="card-body p-0 position-relative">
                        <!-- 地圖容器，RWD 高度由 CSS 控制 -->
                    </div>
                </div>
            </div>

            <!-- 右側區域 -->
            <div class="col-md-4 p-3">
                <div class="d-flex flex-column h-100 gap-3">
                    <!-- 右上：數據分析區 -->
                    <div class="flex-fill">
                        <div class="card h-100 shadow">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>數據分析</h5>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-info mb-3" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    點選地圖上的站點查看詳細數據
                                </div>

                                <div class="row g-3">
                                    <div class="col-6">
                                        <div class="card bg-primary text-white text-center">
                                            <div class="card-body py-3">
                                                <h3 class="mb-1">--</h3>
                                                <small>總數量</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="card bg-warning text-white text-center">
                                            <div class="card-body py-3">
                                                <h3 class="mb-1">--</h3>
                                                <small>平均值</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="card bg-danger text-white text-center">
                                            <div class="card-body py-3">
                                                <h3 class="mb-1">--</h3>
                                                <small>最大值</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="card bg-info text-white text-center">
                                            <div class="card-body py-3">
                                                <h3 class="mb-1">--</h3>
                                                <small>最小值</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 右下：AI 對話區 -->
                    <div class="flex-fill">
                        <div class="card h-100 shadow">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="fas fa-robot me-2"></i>AI 助手</h5>
                            </div>
                            <div class="card-body d-flex flex-column p-0">
                                <!-- 對話內容區 -->
                                <div class="flex-fill p-3" style="background-color: #f8f9fa; overflow-y: auto; max-height: 250px;">
                                    <div class="mb-3">
                                        <div class="d-flex">
                                            <div class="bg-primary text-white rounded-pill px-3 py-2 small">
                                                <i class="fas fa-robot me-1"></i>
                                                您好！我是 AI 助手，可以幫您分析地圖數據。
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- 輸入區 -->
                                <div class="p-3 border-top">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="輸入您的問題..." aria-label="輸入問題">
                                        <button class="btn btn-primary" type="button">
                                            <i class="fas fa-paper-plane"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="module" src="~/js/leaflet/main.js"></script>
}